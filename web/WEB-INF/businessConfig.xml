	<!-- spider平台初始化需要缓存的服务 -->
	<bean id="plantformCacheService" class="org.mind.framework.service.UpdateCacheService">
		<property name="spaceTime" value="1800000" /><!-- 毫秒, 30分钟表示循环处理一次 -->
		<property name="updaters">
			<list>
				<bean class="com.paybelieve.common.InitializationCache">
					<property name="cache" ref="cacheManager" />
					<property name="jdbcTemplate" ref="jdbcTemplate"/>
				</bean>
			</list>
		</property>
	</bean>
	
